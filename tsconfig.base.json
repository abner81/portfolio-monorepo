{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2021",
    "strict": false,
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "strictNullChecks": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@monorepo/arch/controller": [
        "apps/shared/util/arch/controller/src/index.ts"
      ],
      "@monorepo/arch/domain": ["apps/shared/util/arch/domain/src/index.ts"],
      "@monorepo/events": ["apps/shared/util/events/src/index.ts"],
      "@monorepo/exceptions": ["apps/shared/util/exceptions/src/index.ts"],
      "@monorepo/guards": ["apps/shared/util/guards/src/index.ts"],
      "@monorepo/helpers": ["apps/shared/util/helpers/src/index.ts"],
      "@monorepo/util": ["apps/shared/util/util/src/index.ts"],
      "@monorepo/value-objects": [
        "apps/shared/util/value/value-objects/src/index.ts"
      ],
      "@portfolio-monorepo/ddd": ["tools/generators/ddd/src/index.ts"],
      "authentication/domain/user": [
        "apps/authentication/domain/user/src/index.ts"
      ],
      "rent-car/domain/rent": ["apps/rent-car/domain/rent/src/index.ts"],
      "rent-car/domain/store": ["apps/rent-car/domain/store/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
